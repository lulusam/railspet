<h1>Tamagotchi.rb</h1>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">My Pets</div>
  <div class="panel-body">
   

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Max weight</th>
          <th>Foods Eaten</th>
          <th>Face</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @pets.each do |pet| %>
          <tr>
            <td><%= pet.name %></td>
            <td><%= pet.max_weight %> kg</td>
            <td><%= pet.eaten_foods %></td>
            <td><%= image_tag(pet.picture_url, width: 200) if pet.picture.present? %></td>
            <td><%= link_to 'Show', pet %></td>
            <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
            <td><%= link_to 'Delete', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<span id="new_pet1">
<%= link_to 'New Pet', new_pet_path %>
</span>